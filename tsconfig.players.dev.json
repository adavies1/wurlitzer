{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
          ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "declaration": true,
        "sourceMap": true,
        "declarationDir": "./@types"
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
}

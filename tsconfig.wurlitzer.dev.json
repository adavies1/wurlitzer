{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
          ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "declaration": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "outDir": "./dist",
        "declarationDir": "./dist/@types"
    },
    "include": ["src/index.ts"],
    "exclude": ["node_modules", "**/__tests__/*"]
}
